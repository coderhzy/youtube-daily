# Supabase配置
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_service_role_key

# OpenRouter配置（用于AI摘要和分类）
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# 推荐模型:
# - google/gemini-2.0-flash-exp:free (免费，适合长文)
# - anthropic/claude-3.5-sonnet (高质量，收费)
# - openai/gpt-4o-mini (中等质量，收费)
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Gemini图片生成模型（Nano Banana Pro）
GEMINI_IMAGE_MODEL=google/gemini-3-pro-image-preview

# 功能开关
ENABLE_AI_SUMMARY=true
ENABLE_IMAGE_GENERATION=true
ENABLE_PDF_GENERATION=true
ENABLE_EMAIL_SEND=true


# QQ邮箱示例（推荐）:
EMAIL_SMTP_SERVER=smtp.qq.com
EMAIL_SMTP_PORT=465
EMAIL_USERNAME=your_qq_number@qq.com
EMAIL_PASSWORD=your_qq_auth_code
EMAIL_FROM=your_qq_number@qq.com
EMAIL_TO=recipient@example.com

# ==================== 视频生成配置 ====================

# 功能开关（本地运行时开启）
ENABLE_VIDEO_GENERATION=false

# Fish.audio TTS配置
# 申请地址: https://fish.audio/
FISH_AUDIO_API_KEY=your_fish_audio_api_key
FISH_AUDIO_VOICE_ID=your_cloned_voice_id

# Pexels视频素材API
# 申请地址: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key

# 视频输出目录
VIDEO_OUTPUT_DIR=output/videos

# 文章字数配置
ARTICLE_TARGET_WORDS=2000    # 目标字数（默认500）
ARTICLE_MAX_TOKENS=5000      # API返回上限（默认1500，约为字数的2-3倍）